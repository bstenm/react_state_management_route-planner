{
  "name": "route-planner",
  "author": "Bertrand Steinmetz",
  "version": "0.1.0",
  "description": "Route planner for cross-country running",
  "license": "MIT",
  "dependencies": {
    "classnames": "2.2.6",
    "loadjs": "3.5.5",
    "lodash": "4.17.11",
    "prop-types": "15.6.2",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-redux": "6.0.0",
    "react-scripts": "2.1.1",
    "redux": "4.0.1",
    "redux-mock-store": "1.5.3",
    "togpx": "0.5.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "lint": "eslint --debug src/",
    "lint:write": "eslint --debug src/ --fix",
    "prettier": "prettier --write src/**/*.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.(js|jsx)": [
      "npm run lint:write",
      "git add"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/index.js",
      "!src/store.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "tabWidth": 6,
    "semi": true
  },
  "devDependencies": {
    "eslint": "5.6.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-jest-enzyme": "7.0.1",
    "eslint-config-prettier": "3.3.0",
    "eslint-plugin-babel": "5.3.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jest": "22.0.0",
    "eslint-plugin-jsx-a11y": "6.1.2",
    "eslint-plugin-prettier": "3.0.0",
    "eslint-plugin-react": "7.12.0",
    "enzyme": "3.7.0",
    "enzyme-adapter-react-16": "1.7.0",
    "husky": "1.1.4",
    "lint-staged": "8.1.7",
    "prettier": "1.15.2"
  }
}
